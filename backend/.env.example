# Environment Variables Example
# このファイルをコピーして .env または .env.production を作成してください
# 本番環境では必ず強力なシークレットを使用してください

NODE_ENV=development
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis
REDIS_URL=redis://localhost:6379

# JWT - 必ず変更してください！
# openssl rand -base64 64 で生成できます
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_EXPIRES_IN=30d

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CSRF_ENABLED=false

# Session
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET
SESSION_MAX_AGE=86400000