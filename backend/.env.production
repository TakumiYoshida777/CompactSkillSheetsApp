NODE_ENV=production
PORT=8000

# Database
DATABASE_URL=postgresql://skillsheet:password@postgres:5432/skillsheet_prod

# Redis
REDIS_URL=redis://redis:6379

# JWT（本番環境では強力な秘密鍵を使用すること）
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# CORS（本番環境のドメインに変更すること）
CORS_ORIGIN=https://your-production-domain.com

# Logging
LOG_LEVEL=info

# メール送信設定（本番環境用に設定すること）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="SES企業管理システム <noreply@example.com>"

# フロントエンドURL（本番環境のURLに変更すること）
FRONTEND_URL=https://your-production-domain.com

# Feature Flags（本番環境設定）
USE_NEW_BP_API=true  # 新実装を使用
ENABLE_DETAILED_LOGGING=false
ENABLE_CACHING=true
DATA_MIGRATION_MODE=false