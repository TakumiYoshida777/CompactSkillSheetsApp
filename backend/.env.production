# Production Environment Variables
# このファイルは本番環境でのみ使用されます
# 重要: このファイルをGitにコミットしないでください

NODE_ENV=production
PORT=8000

# Database
DATABASE_URL=postgresql://skillsheet:YOUR_PROD_DB_PASSWORD@YOUR_PROD_DB_HOST:5432/skillsheet_prod

# Redis
REDIS_URL=redis://YOUR_PROD_REDIS_HOST:6379

# JWT - 本番環境用の強力なシークレット
# 重要: 以下の値は必ず変更してください
JWT_SECRET=wzgJOX9FY89EjRvydfpamEjA7KYaXJhD7EQJw6SGVQhqevVkX02QGaa05xZ1Lj0ByWYyv6cuWVTHQjVeeUti0g==
JWT_REFRESH_SECRET=wPxcWqDScT6lDDr6vNjbUSbopgYanvyp/e7Yz1PRlDhzfZYOMdojajMoq1BFp3q0n0LTTHN86k637DTZilXnpw==
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_EXPIRES_IN=30d

# Elasticsearch
ELASTICSEARCH_URL=http://YOUR_PROD_ES_HOST:9200

# CORS - 本番環境のドメインを設定
CORS_ORIGIN=https://your-production-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/skillsheet/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Security Headers
HELMET_ENABLED=true
CSRF_ENABLED=true

# Session
SESSION_SECRET=YOUR_SESSION_SECRET_HERE
SESSION_MAX_AGE=86400000  # 24 hours

# Email Service (if needed)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=YOUR_SMTP_PASSWORD

# Monitoring
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY_HERE

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_2FA=false
ENABLE_API_VERSIONING=true

# API Keys (if needed for external services)
EXTERNAL_API_KEY=YOUR_API_KEY_HERE

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Notes:
# 1. 本番環境にデプロイする前に、必ず全ての値を適切に設定してください
# 2. このファイルは.gitignoreに追加されていることを確認してください
# 3. 環境変数は環境に応じて管理サービス（AWS Secrets Manager等）を使用することを推奨します