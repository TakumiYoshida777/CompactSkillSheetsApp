# Dev2環境専用のバックエンド環境変数

# 環境設定
NODE_ENV=development
APP_ENV=dev2
PORT=8000

# データベース設定（Dev2専用）
DATABASE_URL=postgresql://skillsheet:password@postgres:5432/skillsheet_dev2
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=skillsheet_dev2
DATABASE_USER=skillsheet
DATABASE_PASSWORD=password

# Redis設定（Dev2専用）
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch設定（Dev2専用）
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_NODE=http://elasticsearch:9200

# JWT設定（Dev2専用）
JWT_SECRET=dev2-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev2-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# CORS設定（Dev2のフロントエンドポート3001のみ許可）
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ログ設定
LOG_LEVEL=debug
LOG_FORMAT=json

# API設定
API_PREFIX=/api/v1
API_VERSION=1.0.0

# セッション設定
SESSION_SECRET=dev2-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ファイルアップロード設定
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# メール設定（開発環境用）
MAIL_ENABLED=false
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=dev2@example.com
MAIL_PASS=password
MAIL_FROM=noreply@dev2.example.com

# 環境識別子
ENV_IDENTIFIER=DEV2