NODE_ENV=development
PORT=8000

# Database（Docker内のサービス名を使用）
DATABASE_URL=postgresql://skillsheet:password@host.docker.internal:5432/skillsheet_dev

# Redis（Docker内のサービス名を使用）
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Elasticsearch（Docker内のサービス名を使用）
ELASTICSEARCH_URL=http://elasticsearch:9200

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# メール送信設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="SES企業管理システム <noreply@example.com>"

# フロントエンドURL（アクセスURL生成用）
FRONTEND_URL=http://localhost:5173

# Feature Flags（段階的移行用）
USE_NEW_BP_API=true  # テスト中のため true に設定
ENABLE_DETAILED_LOGGING=true
ENABLE_CACHING=true
DATA_MIGRATION_MODE=false